# ============================================
# ELASTICSEARCH CONFIGURATION
# ============================================
ELASTIC_URL=http://localhost:9200
ELASTIC_USER=
ELASTIC_PASSWORD=
ELASTIC_API_KEY=
ELASTIC_VERIFY_CERTS=false
ELASTIC_INDEX_METRICS=dbmon-metrics
ELASTIC_INDEX_ALERTS=dbmon-alerts

# ============================================
# SQL SERVER CONFIGURATION
# ============================================
# FOR LIVE MODE: Update connection string with your SQL Server details
# BEST PRACTICE: Use DBMonTest (not master) - create with: sample_queries/create_test_database.sql
SQL_CONNECTION_STRING=Driver={ODBC Driver 18 for SQL Server};Server=localhost,1433;Database=DBMonTest;UID=sa;PWD=YourStrong!Passw0rd;TrustServerCertificate=yes;

# OR use individual settings:
# SQL_SERVER_HOST=localhost
# SQL_SERVER_PORT=1433
# SQL_SERVER_DATABASE=master
# SQL_SERVER_USERNAME=sa
# SQL_SERVER_PASSWORD=YourPassword

SQL_INSTANCE=local-sql
HOST_NAME=local-host

# ============================================
# COLLECTOR MODE
# ============================================
# OPTIONS:
#   mock   = Uses sample_metrics.jsonl (default, for testing)
#   live   = Connects to actual SQL Server (requires connection string above)
COLLECTOR_MODE=mock
SAMPLE_INPUT_PATH=sample_inputs/sample_metrics.jsonl
