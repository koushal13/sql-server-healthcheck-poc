{
  "index_patterns": ["dbmon-alerts*"],
  "template": {
    "settings": {"number_of_shards": 1},
    "mappings": {
      "properties": {
        "@timestamp": {"type": "date"},
        "alert_id": {"type": "keyword"},
        "severity": {"type": "keyword"},
        "message": {"type": "text"},
        "event": {"type": "object", "enabled": true},
        "explanation": {"type": "object", "enabled": true},
        "recommendations": {"type": "keyword"}
      }
    }
  }
}
